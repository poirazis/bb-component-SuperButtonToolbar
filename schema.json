{
  "type": "component",
  "metadata": {},
  "schema": {
    "name": "bb-component-SuperButtonToolbar",
    "friendlyName": "Super Button Toolbar",
    "description": "Manage groups of Button",
    "icon": "Button",
    "hasChildren": true,
    "showEmptyState": false,
    "block": false,
    "styles": ["padding", "background", "border"],
    "settings": [
      {
        "type": "select",
        "key": "mode",
        "label": "Toolbar Type",
        "defaultValue": "normal",
        "options": [
          { "label": "Normal", "value": "normal" },
          { "label": "ON / OFF", "value": "onoff" },
          { "label": "Multi ON / OFF", "value": "multiOnoff" }
        ]
      },
      {
        "type": "select",
        "key": "buttonClass",
        "label": "Button Class",
        "options": [
          { "label": "Button", "value": "button" },
          { "label": "Action Button", "value": "actionButton" }
        ],
        "defaultValue": "button"
      },
      {
        "type": "select",
        "label": "Direction",
        "key": "direction",
        "showInBar": true,
        "barStyle": "buttons",
        "options": [
          {
            "label": "Row",
            "value": "row",
            "barIcon": "ViewRow",
            "barTitle": "Row layout"
          },
          {
            "label": "Column",
            "value": "column",
            "barIcon": "ViewColumn",
            "barTitle": "Column layout"
          }
        ],
        "defaultValue": "row"
      },
      {
        "type": "select",
        "key": "align",
        "label": "Align",
        "showInBar": true,
        "barStyle": "buttons",
        "options": [
          {
            "label": "Left",
            "value": "flex-start",
            "barIcon": "TextAlignLeft"
          },
          {
            "label": "Center",
            "value": "center",
            "barIcon": "TextAlignCenter"
          },
          { "label": "Right", "value": "flex-end", "barIcon": "TextAlignRight" }
        ],
        "dependsOn": { "setting": "direction", "value": "row" },
        "defaultValue": "flex-start"
      },
      {
        "type": "select",
        "label": "Size",
        "key": "size",
        "showInBar": true,
        "barStyle": "picker",
        "options": [
          {
            "label": "Small",
            "value": "S"
          },
          {
            "label": "Medium",
            "value": "M"
          },
          {
            "label": "Large",
            "value": "L"
          }
        ],
        "defaultValue": "M"
      },
      {
        "type": "boolean",
        "label": "Icon Only",
        "key": "iconOnly"
      },
      {
        "type": "boolean",
        "label": "Quiet",
        "key": "quiet"
      },
      {
        "type": "boolean",
        "label": "Compact",
        "key": "compact"
      },
      {
        "type": "boolean",
        "label": "Disabled",
        "key": "disabled"
      },
      {
        "type": "boolean",
        "label": "In Nav Bar",
        "key": "inNavBar"
      },
      {
        "type": "boolean",
        "label": "Hide Portal",
        "key": "hidePortal",
        "dependsOn": "inNavBar"
      },
      {
        "type": "boolean",
        "label": "Collapsible",
        "key": "makeCollapsible",
        "dependsOn": "inNavBar"
      },
      {
        "type": "buttonConfiguration",
        "key": "buttons",
        "wide": true
      },
      {
        "type": "boolean",
        "key": "collapsed",
        "label": "Collapsed",
        "dependsOn": "buttons"
      },
      {
        "type": "text",
        "key": "collapsedText",
        "label": "Collapsed Text",
        "defaultValue": "Actions",
        "dependsOn": "collapsed"
      }
    ]
  }
}
